{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "build",
    "baseUrl": "./lib",
    "rootDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": ["build", "node_modules", "sample", "**/*.spec.ts", "test/**"]
}
